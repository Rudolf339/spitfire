<?xml version="1.0"?>
<PropertyList>
	<path>Aircraft/Spitfire/Models/coolant-temp.ac</path>
	<animation>
		<type>rotate</type>
		<object-name>rad-temp-Needle1</object-name>
		<property>/fdm/jsbsim/propulsion/engine[0]/cht-degF</property>
		<interpolation>
			<entry>
				<ind>104</ind>
				<dep>160</dep>
			</entry>
			<entry>
				<ind>506</ind>
				<dep>45</dep>
			</entry>
			<entry>
				<ind>557</ind>
				<dep>-30</dep>
			</entry>
			<entry>
				<ind>606</ind>
				<dep>-160</dep>
			</entry>
		</interpolation>
		<center>
			<x-m>-0.04</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>material</type>
		<condition>
			<greater-than>
				<property>/controls/lighting/panel-norm</property>
				<value>0</value>
			</greater-than>
		</condition>
		<emission>
			<factor-prop>/controls/lighting/panel-norm</factor-prop>
			<red>0.75</red>
			<green>0.25</green>
			<blue>0.25</blue>
		</emission>
	</animation>
	
	<!-- *** LoD *** -->
	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>5</max-m>
	</animation>
</PropertyList>
